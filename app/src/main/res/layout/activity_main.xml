<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_black">


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mn_bold"
        android:gravity="center|end"
        android:paddingTop="50dp"
        android:paddingBottom="30dp"
        android:paddingHorizontal="9dp"
        android:text="0"
        android:textColor="@color/neon_blue"
        android:textSize="99sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingHorizontal="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <Button
                android:id="@+id/button7"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:text="7"
                android:layout_weight="1"
                android:backgroundTint="@color/light_black"
                android:textSize="36dp"
                android:textColor="@color/neon_blue"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_blue"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="9dp"
                android:layout_weight="1"
                android:text="8"
                android:backgroundTint="@color/light_black"
                android:textSize="36dp"
                android:textColor="@color/neon_blue"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_blue"
                app:strokeWidth="3dp"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="9dp"
                android:layout_weight="1"
                android:text="9"
                android:backgroundTint="@color/light_black"
                android:textSize="36dp"
                android:textColor="@color/neon_blue"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_blue"
                app:strokeWidth="3dp"/>

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=":"
                android:textStyle="bold"
                android:backgroundTint="@color/neon_green"
                android:textSize="36dp"
                android:textColor="@color/light_black"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_green"
                app:strokeWidth="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingHorizontal="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <Button
                android:id="@+id/button4"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:backgroundTint="@color/light_black"
                android:textSize="36dp"
                android:textColor="@color/neon_blue"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_blue"
                app:strokeWidth="3dp"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="9dp"
                android:layout_weight="1"
                android:text="5"
                android:backgroundTint="@color/light_black"
                android:textSize="36dp"
                android:textColor="@color/neon_blue"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_blue"
                app:strokeWidth="3dp"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="9dp"
                android:layout_weight="1"
                android:text="6"
                android:backgroundTint="@color/light_black"
                android:textSize="36dp"
                android:textColor="@color/neon_blue"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_blue"
                app:strokeWidth="3dp"/>

            <Button
                android:id="@+id/buttonMul"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="x"
                android:textStyle="bold"
                android:backgroundTint="@color/neon_green"
                android:textSize="36dp"
                android:textColor="@color/light_black"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_green"
                app:strokeWidth="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingHorizontal="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <Button
                android:id="@+id/button1"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:backgroundTint="@color/light_black"
                android:textSize="36dp"
                android:textColor="@color/neon_blue"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_blue"
                app:strokeWidth="3dp"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="9dp"
                android:layout_weight="1"
                android:text="2"
                android:backgroundTint="@color/light_black"
                android:textSize="36dp"
                android:textColor="@color/neon_blue"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_blue"
                app:strokeWidth="3dp"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="9dp"
                android:layout_weight="1"
                android:text="3"
                android:backgroundTint="@color/light_black"
                android:textSize="36dp"
                android:textColor="@color/neon_blue"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_blue"
                app:strokeWidth="3dp"/>

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textStyle="bold"
                android:backgroundTint="@color/neon_green"
                android:textSize="36dp"
                android:textColor="@color/light_black"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_green"
                app:strokeWidth="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingHorizontal="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <Button
                android:id="@+id/buttonC"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textStyle="bold"
                android:backgroundTint="@color/neon_red"
                android:textSize="36dp"
                android:textColor="@color/light_black"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_red"
                app:strokeWidth="3dp"/>

            <Button
                android:id="@+id/button0"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="9dp"
                android:layout_weight="1"
                android:text="0"
                android:backgroundTint="@color/light_black"
                android:textSize="36dp"
                android:textColor="@color/neon_blue"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_blue"
                app:strokeWidth="3dp"/>

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="9dp"
                android:layout_weight="1"
                android:text="."
                android:backgroundTint="@color/light_black"
                android:textSize="36dp"
                android:textColor="@color/neon_blue"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_blue"
                app:strokeWidth="3dp"/>

            <Button
                android:id="@+id/buttonMin"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textStyle="bold"
                android:backgroundTint="@color/neon_green"
                android:textSize="36dp"
                android:textColor="@color/light_black"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_green"
                app:strokeWidth="3dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_weight="1"
            android:paddingHorizontal="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <Button
                android:id="@+id/buttonRes"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textStyle="bold"
                android:backgroundTint="@color/neon_yellow"
                android:textSize="36dp"
                android:textColor="@color/light_black"
                app:cornerRadius="18dp"
                app:strokeColor="@color/neon_yellow"
                app:strokeWidth="3dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>